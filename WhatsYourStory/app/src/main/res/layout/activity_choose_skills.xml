<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.si543.whatsyourstory.ChooseSkillsActivity">

    <TextView android:text="Choose your skills" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose_skills"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Users will be able to select multiple buttons with
     skills that they would like, or add their own skills. -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skill"
        android:id="@+id/button"
        android:layout_below="@+id/choose_skills"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add your own skills:"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="109dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextbutton"
        android:layout_marginTop="33dp"
        android:layout_centerHorizontal="true"
        android:onClick="selectSkills"/>

</RelativeLayout>