<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileedit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    tools:context=".MyProfileActivity"
    android:weightSum="1"
    android:background="@color/bg_grey">

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="180dp">


        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:id="@+id/userPicBackground"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/myprofile_background"
            android:scaleType="fitXY"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:id="@+id/otheruser_white_circle"
            android:src="@drawable/otheruser_white_circle"
            android:layout_marginTop="10dp"
            android:layout_gravity="center" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:id="@+id/userPicture"
            android:src="@drawable/default_picture"
            android:layout_marginTop="10dp"
            android:layout_gravity="center" />

    </FrameLayout>

    <TextView
        android:id="@+id/userFullNameSharedPrefs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@drawable/button_text"
        android:layout_toEndOf="@+id/userPicture"
        android:layout_marginTop="37dp"
        android:layout_alignTop="@+id/userPicture" />


    <TextView
        android:id="@+id/userTitleSharedPrefs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@drawable/button_text"
        android:layout_below="@+id/userFullNameSharedPrefs"
        android:layout_alignStart="@+id/userFullNameSharedPrefs" />

    <TextView
        android:id="@+id/userLocationSharedPrefs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@drawable/button_text"
        android:layout_below="@+id/userTitleSharedPrefs"
        android:layout_alignStart="@+id/userTitleSharedPrefs" />

    <TextView
        android:id="@+id/userCompanySharedPrefs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@drawable/button_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/skills"
        android:textStyle="bold"
        android:id="@+id/userSkills"
        android:textColor="@drawable/button_text"
        android:layout_below="@+id/userPicture" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myskills1"
        android:id="@+id/multiAutoCompleteTextView"
        android:textColor="@drawable/button_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/interests"
        android:textStyle="bold"
        android:textColor="@drawable/button_text"
        android:id="@+id/textView"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myinterests1"
        android:textColor="@drawable/button_text"
        android:id="@+id/multiAutoCompleteTextView4"

        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

</LinearLayout>