<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileedit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    tools:context=".MyProfileActivity"
    android:weightSum="1"
    android:background="@color/bg_grey">

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="180dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:id="@+id/userPicBackground"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/myprofile_background"
            android:scaleType="fitXY"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_marginTop="15dp"
            android:id="@+id/otheruser_white_circle"
            android:src="@drawable/otheruser_white_circle"
            android:layout_gravity="center" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_marginTop="15dp"
            android:id="@+id/userPicture"
            android:src="@drawable/default_picture"
            android:layout_gravity="center" />

    </FrameLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_dropshadow"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="3dp"
            android:padding="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myprofile_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/myprofile_name_title"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/userFullNameSharedPrefs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="16dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_dropshadow"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="3dp"
            android:padding="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myprofile_career_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/myprofile_career_title"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/userTitleSharedPrefs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="16dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_color" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_dropshadow"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="3dp"
            android:padding="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myprofile_company_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/myprofile_company_title"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/userLocationSharedPrefs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="16dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_color"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_dropshadow"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="3dp"
            android:padding="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myprofile_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/myprofile_location_title"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/userCompanySharedPrefs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="16dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_color"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_dropshadow"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="3dp"
            android:padding="20dp"
            android:orientation="vertical" >

                <TextView
                    android:id="@+id/userSkills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/skills"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/userSkillsSharedPrefs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_color"
            android:textSize="16dp"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_dropshadow"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:padding="20dp"
                android:orientation="vertical" >

        <TextView
            android:id="@+id/userInterests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/interests"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:id="@+id/userInterestsSharedPrefs"/>

        </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
