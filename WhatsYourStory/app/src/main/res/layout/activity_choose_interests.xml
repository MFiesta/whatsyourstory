<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@drawable/bgblue"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.si543.whatsyourstory.ChooseInterestsActivity"
    android:id="@+id/rl_outer">

    <TextView
        android:text="@string/chooseinterests"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choose_interests_text"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:gravity="center"/>

    <TextView
        android:text="@string/tellusinterests"
        android:layout_width="fill_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:id="@+id/tell_us_interests_text"
        android:textSize="16sp"
        android:layout_below="@id/choose_interests_text"
        android:gravity="center"
        android:paddingBottom="20dp"/>

    <!-- Users will be able to select multiple buttons with
     interests that they have. Toggle will turn on to indicate a button is selected.
     Ideally, these initial buttons would be populated with content that is popular
     among users of the app. For purposes of this course, it will initally populate with
     pre-selected buttons. -->

    <ToggleButton
        android:id="@+id/button1_row1"
        android:text="@string/button1_row1textinterests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tell_us_interests_text"
        android:layout_alignParentStart="true"
        android:textOn="@string/button1_row1textinterests"
        android:textOff="@string/button1_row1textinterests"
        android:textColor="#FFFFFF"/>

    <ToggleButton
        android:id="@+id/button2_row1"
        android:text="@string/button2_row1textinterests"
        android:layout_toEndOf="@id/button1_row1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tell_us_interests_text"
        android:textOn="@string/button2_row1textinterests"
        android:textOff="@string/button2_row1textinterests"
        android:textColor="#FFFFFF"/>

    <ToggleButton
        android:id="@+id/button3_row1"
        android:text="@string/button3_row1textinterests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/button2_row1"
        android:layout_below="@+id/tell_us_interests_text"
        android:textOn="@string/button3_row1textinterests"
        android:textOff="@string/button3_row1textinterests"
        android:textColor="#FFFFFF"/>

    <ToggleButton
        android:id="@+id/button1_row2"
        android:text="@string/button1_row2textinterests"
        android:layout_below="@+id/button1_row1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="@string/button1_row2textinterests"
        android:textOff="@string/button1_row2textinterests"
        android:textColor="#FFFFFF"/>

    <ToggleButton
        android:id="@+id/button2_row2"
        android:text="@string/button2_row2textinterests"
        android:layout_below="@+id/button2_row1"
        android:layout_toEndOf="@+id/button1_row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="@string/button2_row2textinterests"
        android:textOff="@string/button2_row2textinterests"
        android:textColor="#FFFFFF" />

    <ToggleButton
        android:id="@+id/button3_row2"
        android:text="@string/button3_row2textinterests"
        android:layout_below="@+id/button2_row1"
        android:layout_toEndOf="@+id/button2_row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="@string/button3_row2textinterests"
        android:textOff="@string/button3_row2textinterests"
        android:textColor="#FFFFFF"/>

    <ToggleButton
        android:id="@+id/button4_row2"
        android:text="@string/button4_row2textinterests"
        android:layout_below="@+id/button3_row1"
        android:layout_toEndOf="@id/button3_row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="@string/button4_row2textinterests"
        android:textOff="@string/button4_row2textinterests"
        android:textColor="#FFFFFF"/>

    <ToggleButton
        android:id="@+id/button1_row3"
        android:text="@string/button1_row3textinterests"
        android:layout_below="@+id/button1_row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="@string/button1_row3textinterests"
        android:textOff="@string/button1_row3textinterests"
        android:textColor="#FFFFFF"/>

    <ToggleButton
        android:id="@+id/button2_row3"
        android:text="@string/button2_row3textinterests"
        android:layout_below="@+id/button2_row2"
        android:layout_toEndOf="@+id/button1_row3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="@string/button2_row3textinterests"
        android:textOff="@string/button2_row3textinterests"
        android:textColor="#FFFFFF"/>

    <ToggleButton
        android:id="@+id/button3_row3"
        android:text="@string/button3_row3textinterests"
        android:layout_below="@+id/button2_row2"
        android:layout_toEndOf="@id/button2_row3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="@string/button3_row3textinterests"
        android:textOff="@string/button3_row3textinterests"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/nextbutton"
        android:text="@string/nextbuttoninterests"
        style="?android:textAppearanceSmall"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginTop="16sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@drawable/button_text"
        android:background= "@drawable/button_shape"
        android:onClick="interestsNext"/>
</RelativeLayout>

    <!-- Next, users will be taken to the Feed Activity page. -->
