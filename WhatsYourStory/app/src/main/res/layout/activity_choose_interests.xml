<!-- Michelle Fiesta -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.si543.whatsyourstory.ChooseInterestsActivity">

    <TextView android:text="Choose your interests" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose_interests"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Users will be able to select multiple buttons with
     interests that they have, or add their own interests. -->

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engineering"
        android:id="@+id/button"
        android:layout_below="@+id/choose_interests"
        android:layout_alignParentStart="true"
        android:textOn="Engineering"
        android:textOff="Engineering"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add your own interests:"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="109dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/nextbutton"
        android:onClick="interestsNext" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer Science"
        android:id="@+id/button2"
        android:layout_above="@+id/button3"
        android:layout_toEndOf="@+id/button"
        android:textOn="Computer Science"
        android:textOff="Computer Science" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apple"
        android:id="@+id/button3"
        android:layout_toStartOf="@+id/textView"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:textOn="Apple"
        android:textOff="Apple" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watercolor"
        android:id="@+id/button5"
        android:layout_toEndOf="@+id/button"
        android:layout_alignTop="@+id/button3"
        android:layout_alignStart="@+id/choose_interests"
        android:textOn="Watercolor"
        android:textOff="Watercolor" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Windows"
        android:id="@+id/button6"
        android:layout_toEndOf="@+id/button5"
        android:layout_alignTop="@+id/button5"
        android:textOn="Windows"
        android:textOff="Windows" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dance"
        android:id="@+id/button7"
        android:layout_toStartOf="@+id/button5"
        android:layout_below="@+id/button3"
        android:textOn="Dance"
        android:textOff="Dance" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSS"
        android:id="@+id/button10"
        android:layout_toStartOf="@+id/button5"
        android:layout_alignTop="@+id/button7"
        android:layout_alignEnd="@+id/editText"
        android:textOn="CSS"
        android:textOff="CSS" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Knitting"
        android:id="@+id/button11"
        android:layout_toStartOf="@+id/button5"
        android:layout_below="@+id/button7"
        android:layout_alignParentStart="true"
        android:textOn="Knitting"
        android:textOff="Knitting" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Craft beer"
        android:id="@+id/button13"
        android:layout_toStartOf="@+id/button6"
        android:layout_below="@+id/button10"
        android:textOn="Craft beer"
        android:textOff="Craft beer" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:id="@+id/button14"
        android:layout_toStartOf="@+id/button10"
        android:layout_below="@+id/button11"
        android:layout_alignStart="@+id/button7"
        android:textOn="Food"
        android:textOff="Food"/>/>

</RelativeLayout>
