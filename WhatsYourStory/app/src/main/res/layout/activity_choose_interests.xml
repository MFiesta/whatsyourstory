<!-- Michelle Fiesta -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.si543.whatsyourstory.ChooseInterestsActivity"
    android:id="@+id/rl_outer">

    <TextView
        android:text="Choose your interests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choose_interests_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <!-- Users will be able to select multiple buttons with
     interests that they have. Toggle will turn on to indicate a button is selected.
     Ideally, these initial buttons would be populated with content that is popular
     among users of the app. For purposes of this course, it will initally populate with
     pre-selected buttons. -->

    <ToggleButton
        android:id="@+id/button1_row1"
        android:text="Engineering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_interests_text"
        android:layout_alignParentStart="true"
        android:textOn="Engineering"
        android:textOff="Engineering"/>

    <ToggleButton
        android:id="@+id/button2_row1"
        android:text="Computer Science"
        android:layout_toRightOf="@id/button1_row1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_interests_text"
        android:textOn="Computer Science"
        android:textOff="Computer Science" />

    <ToggleButton
        android:id="@+id/button3_row1"
        android:text="Apple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button2_row1"
        android:layout_below="@+id/choose_interests_text"
        android:textOn="Apple"
        android:textOff="Apple" />

    <ToggleButton
        android:id="@+id/button1_row2"
        android:text="Watercolor"
        android:layout_below="@+id/button1_row1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Watercolor"
        android:textOff="Watercolor" />

    <ToggleButton
        android:id="@+id/button2_row2"
        android:text="Windows"
        android:layout_below="@+id/button2_row1"
        android:layout_toRightOf="@+id/button1_row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Windows"
        android:textOff="Windows" />

    <ToggleButton
        android:id="@+id/button3_row2"
        android:text="Dance"
        android:layout_below="@+id/button2_row1"
        android:layout_toRightOf="@+id/button2_row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Dance"
        android:textOff="Dance" />

    <ToggleButton
        android:id="@+id/button4_row2"
        android:text="CSS"
        android:layout_below="@+id/button3_row1"
        android:layout_toRightOf="@id/button3_row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="CSS"
        android:textOff="CSS" />

    <ToggleButton
        android:id="@+id/button1_row3"
        android:text="Knitting"
        android:layout_below="@+id/button1_row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Knitting"
        android:textOff="Knitting" />

    <ToggleButton
        android:id="@+id/button2_row3"
        android:text="Craft beer"
        android:layout_below="@+id/button2_row2"
        android:layout_toRightOf="@+id/button1_row3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Craft beer"
        android:textOff="Craft beer" />

    <ToggleButton
        android:id="@+id/button3_row3"
        android:text="Food"
        android:layout_below="@+id/button2_row2"
        android:layout_toRightOf="@id/button2_row3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Food"
        android:textOff="Food"/>

<!-- Users can add their own interests to the list. Eventually, what they
 add should turn into a button and add to the screen. -->

    <TextView
        android:id="@+id/add_interests_text"
        android:text="Add your own interests:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText"
        android:layout_above="@+id/nextbutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

<!-- Next, users will be taken to the Feed Activity page. -->

    <Button
        android:id="@+id/nextbutton"
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="interestsNext"/>

</RelativeLayout>
