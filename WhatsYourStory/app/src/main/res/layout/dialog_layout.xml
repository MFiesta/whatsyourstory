<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/semitransparent_white">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#00B8D4"
        android:textSize="22sp"
        android:paddingTop="15dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/dialog_message"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/button_dialog"
        android:text="Ok, I Got It!"
        android:drawableLeft="@drawable/action_bar_icon"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/button_dialog"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="1dip"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />
</LinearLayout>